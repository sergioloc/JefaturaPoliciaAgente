<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cdi.practica.jefaturapoliciaagente.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:id="@+id/frameSOS"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:src="@drawable/card_red"/>

    <TextView
        android:id="@+id/textSOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextIcons"
        android:text="EMERGENCIAS:                         0"
        android:layout_alignLeft="@+id/frameSOS"
        android:layout_alignTop="@+id/frameSOS"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:layout_marginTop="37dp"/>

    <ImageView
        android:id="@+id/framePre"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/frameSOS"
        android:padding="10dp"
        android:src="@drawable/card_blue"/>

    <TextView
        android:id="@+id/textPre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextIcons"
        android:text="Predenuncias:                         3/6"
        android:layout_alignLeft="@+id/framePre"
        android:layout_alignTop="@+id/framePre"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:layout_marginTop="37dp"/>

    <TextView
        android:id="@+id/textEtc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="...\n\nETC"
        android:textSize="20dp"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/framePre"
        android:layout_alignLeft="@+id/textPre"
        android:layout_alignStart="@+id/textPre" />




</RelativeLayout>
